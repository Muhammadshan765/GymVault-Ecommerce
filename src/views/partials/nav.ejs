<div class="fixed z-50 top-0 w-full bg-gray-900 text-white shadow-lg">
    <!-- Main Navigation Bar -->
    <div class="container mx-auto px-6 h-16 flex items-center justify-between">
        <!-- Left Side (Logo & Brand) -->
        <div class="flex items-center space-x-8">
            <div class="flex items-center">
                <img src="/images/image.png" alt="GymVault" class="h-10 hover:scale-105 transition-transform duration-300" />
                <span class="ml-3 text-2xl font-bold bg-gradient-to-r from-red-500 to-red-700 bg-clip-text text-transparent">GymVault</span>
            </div>
            
            <!-- Primary Navigation -->
            <nav class="hidden lg:flex items-center space-x-6">
                <a href="/home" class="text-gray-300 hover:text-red-500 transition-colors duration-300 flex items-center space-x-2">
                    <i class="fa-solid fa-home"></i>
                    <span>Home</span>
                </a>
                <a href="/shop" class="text-gray-300 hover:text-red-500 transition-colors duration-300">Shop</a>
                <a href="#" class="text-gray-300 hover:text-red-500 transition-colors duration-300">About Us</a>
                <a href="#" class="text-gray-300 hover:text-red-500 transition-colors duration-300">Contact</a>
            </nav>
        </div>

        <!-- Center (Search) -->
        <div class="hidden md:block flex-1 max-w-xl mx-8">
            <form action="/shop" method="GET" class="relative" id="searchForm">
                <input type="text" 
                       name="search"
                       id="searchInput"
                       placeholder="Search for fitness equipment..." 
                       class="w-full py-2 px-4 pr-10 rounded-full bg-gray-800 border border-gray-700 text-gray-300 placeholder-gray-500 focus:border-red-500 focus:ring-1 focus:ring-red-500 focus:outline-none transition-all duration-300"
                       value="<%= locals.searchQuery || '' %>"
                />
                <button type="submit" 
                        id="searchButton"
                        class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-red-500 transition-colors duration-300">
                    <i class="fa-solid fa-search"></i>
                </button>
            </form>
        </div>

        <!-- Right Side (Icons) -->
        <div class="flex items-center space-x-1 sm:space-x-4">
            <a href="/wishlist" class="p-2 text-gray-300 hover:text-red-500 transition-all duration-300 hover:scale-110">
                <i class="fa-regular fa-heart text-xl"></i>
            </a>
            <div class="relative group">
                <button class="p-2 text-gray-300 hover:text-red-500 transition-all duration-300 hover:scale-110">
                    <i class="fa-regular fa-user text-xl"></i>
                </button>
                <!-- Dropdown Menu -->
                <div class="absolute right-0 mt-2 w-48 bg-gray-900 rounded-lg shadow-xl py-2 invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-all duration-300">
                    <a href="/profile" class="block px-4 py-2 text-gray-300 hover:text-red-500 hover:bg-gray-800">
                        <i class="fa-regular fa-user mr-2"></i>Profile
                    </a>
                    <a href="/logout" class="block px-4 py-2 text-gray-300 hover:text-red-500 hover:bg-gray-800">
                        <i class="fa-solid fa-sign-out-alt mr-2"></i>Logout
                    </a>
                </div>
            </div>
            <a href="/cart" class="p-2 text-gray-300 hover:text-red-500 transition-all duration-300 hover:scale-110 relative">
                <i class="fa-solid fa-cart-shopping text-xl"></i>
                <% if (locals.cartCount && cartCount > 0) { %>
                    <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-5 h-5 flex items-center justify-center rounded-full animate-pulse">
                        <%= cartCount > 9 ? '9+' : cartCount %>
                    </span>
                <% } %>
            </a>
            <button id="menu-toggle" class="lg:hidden p-2 text-gray-300 hover:text-red-500 transition-all duration-300">
                <i class="fa-solid fa-bars text-2xl"></i>
            </button>
        </div>
    </div>
</div>

<!-- Mobile Menu -->
<div id="mobile-menu" class="fixed inset-0 bg-black/50 backdrop-blur-sm hidden lg:hidden z-40" aria-hidden="true">
    <div class="fixed top-16 right-0 w-full max-w-sm h-screen bg-gray-900 shadow-xl transform transition-transform duration-300">
        <!-- Search Bar for Mobile -->
        <div class="p-4 border-b border-gray-800">
            <form action="/shop" method="GET" class="relative" id="mobileSearchForm">
                <input type="text"
                       name="search"
                       id="mobileSearchInput" 
                       placeholder="Search products..." 
                       class="w-full py-2 px-4 pr-10 rounded-full bg-gray-800 border border-gray-700 text-gray-300 placeholder-gray-500 focus:border-red-500 focus:ring-1 focus:ring-red-500 focus:outline-none"
                       value="<%= locals.searchQuery || '' %>"
                />
                <button type="submit" 
                        id="mobileSearchButton"
                        class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-red-500">
                    <i class="fa-solid fa-search"></i>
                </button>
            </form>
        </div>

        <!-- Mobile Navigation Links -->
        <nav class="flex flex-col p-4">
            <div class="text-lg font-bold text-red-500 mb-4">Menu</div>
            <a href="/home" class="p-3 text-gray-300 hover:text-red-500 hover:bg-gray-800 rounded-lg transition-all duration-300 flex items-center">
                <i class="fa-solid fa-home w-8"></i>Home
            </a>
            <a href="/shop" class="p-3 text-gray-300 hover:text-red-500 hover:bg-gray-800 rounded-lg transition-all duration-300 flex items-center">
                <i class="fa-solid fa-store w-8"></i>Shop
            </a>
            <a href="#" class="p-3 text-gray-300 hover:text-red-500 hover:bg-gray-800 rounded-lg transition-all duration-300 flex items-center">
                <i class="fa-solid fa-envelope w-8"></i>Contact
            </a>
            <a href="#" class="p-3 text-gray-300 hover:text-red-500 hover:bg-gray-800 rounded-lg transition-all duration-300 flex items-center">
                <i class="fa-solid fa-info-circle w-8"></i>About
            </a>
            <a href="/logout" class="p-3 text-gray-300 hover:text-red-500 hover:bg-gray-800 rounded-lg transition-all duration-300 flex items-center">
                <i class="fa-solid fa-sign-out-alt w-8"></i>Logout
            </a>
        </nav>
    </div>
</div>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const searchInput = document.getElementById("searchInput");
    const searchButton = document.getElementById("searchButton");
    const mobileSearchInput = document.getElementById("mobileSearchInput");
    const mobileSearchButton = document.getElementById("mobileSearchButton");
    const searchForm = document.getElementById("searchForm");
    const mobileSearchForm = document.getElementById("mobileSearchForm");
    let isMenuOpen = false;

    // Get search query from URL
    const urlParams = new URLSearchParams(window.location.search);
    const searchQuery = urlParams.get('search');

    // Set initial input values if there's a search query
    if (searchQuery) {
        searchInput.value = searchQuery;
        mobileSearchInput.value = searchQuery;
    }

    // Search functionality
    function handleSearch(e, form, input) {
        e.preventDefault();
        const searchTerm = input.value.trim();
        
        if (searchTerm === '') {
            // If search is empty, redirect to shop without query
            window.location.href = '/shop';
        } else {
            window.location.href = `/shop?search=${encodeURIComponent(searchTerm)}`;
        }
    }

    searchForm.addEventListener("submit", (e) => handleSearch(e, searchForm, searchInput));
    mobileSearchForm.addEventListener("submit", (e) => handleSearch(e, mobileSearchForm, mobileSearchInput));

    // Handle input changes
    searchInput.addEventListener("input", function(e) {
        if (e.target.value.trim() === '' && e.inputType === 'deleteContentBackward') {
            window.location.href = '/shop';
        }
    });

    mobileSearchInput.addEventListener("input", function(e) {
        if (e.target.value.trim() === '' && e.inputType === 'deleteContentBackward') {
            window.location.href = '/shop';
        }
    });

    menuToggle.addEventListener("click", () => {
        isMenuOpen = !isMenuOpen;
        mobileMenu.classList.toggle("hidden");
        document.body.classList.toggle("overflow-hidden");
        
        // Update menu icon
        const menuIcon = menuToggle.querySelector('i');
        if (isMenuOpen) {
            menuIcon.classList.remove('fa-bars');
            menuIcon.classList.add('fa-xmark');
        } else {
            menuIcon.classList.remove('fa-xmark');
            menuIcon.classList.add('fa-bars');
        }
    });

    // Close menu when clicking outside
    mobileMenu.addEventListener('click', (event) => {
        if (event.target === mobileMenu) {
            mobileMenu.classList.add("hidden");
            document.body.classList.remove("overflow-hidden");
            isMenuOpen = false;
            const menuIcon = menuToggle.querySelector('i');
            menuIcon.classList.remove('fa-xmark');
            menuIcon.classList.add('fa-bars');
        }
    });
</script>