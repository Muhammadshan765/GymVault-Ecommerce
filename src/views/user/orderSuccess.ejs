 
    <%- include("../partials/nav") %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
 
<div class="bg-gray-100">

    <div class="container mx-auto px-4 py-12 mt-20 sm:mt-28 max-w-3xl">
        <div class="bg-white rounded-2xl shadow-sm p-8 text-center">
            <!-- Success Icon -->
            <div class="mx-auto flex items-center justify-center h-24 w-24 rounded-full bg-green-100 mb-6">
                <i class="fas fa-check text-4xl text-green-600"></i>
            </div>
            
            <!-- Success Message -->
            <h1 class="text-3xl font-bold text-gray-800 mb-4">Order Placed Successfully!</h1>
            <p class="text-gray-600 mb-6">Thank you for your purchase. Your order has been confirmed.</p>
            
            <!-- Order Details -->
            <div class="bg-gray-50 rounded-xl p-6 mb-8">
                <p class="text-gray-700 mb-2">Order ID: <span class="font-semibold" id="orderIdDisplay"><%= orderId %></span></p>
                <p class="text-gray-700">We'll send a confirmation email to <span class="font-semibold"><%= userEmail %></span></p>
            </div>
            
            <!-- Illustration -->
            <div class="mb-8">
                <img src="/images/confirmation-approval.webp" alt="Order Success" class="h-48 mx-auto">
            </div>
            
            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/orders?orderId=<%= orderId %>" class="bg-black text-white py-3 px-6 rounded-xl font-medium hover:bg-gray-800 transition-colors">
                    <i class="fas fa-receipt mr-2"></i> View Order Details
                </a>
                <a href="/shop" class="bg-gray-200 text-gray-800 py-3 px-6 rounded-xl font-medium hover:bg-gray-300 transition-colors">
                    <i class="fas fa-shopping-bag mr-2"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</div>
 
